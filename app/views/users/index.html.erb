<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
        Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
          <%= link_to 'Add Friend', friendships_path(friend_id: user), method: :post unless user == current_user ||
          current_user.friends.include?(user) ||
          current_user.inverse_friends.include?(user) %>
        </span>
      </li>
    <% end %>
  </ul>
</section>
